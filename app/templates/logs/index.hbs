<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Time Spent</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {{#each filteredLogs as |log|}}
      <tr>
        <td>{{log.id}}</td>
        <td>{{moment-format log.date "ddd MMM d YYYY"}}</td>
        <td>{{log.formattedMinutesSpent}}</td>
        <td>{{log.workDescription}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
